/* pages/home/free-class/free-class.wxss */
@import "../home.wxss";

.float-l {
    float: left;
}

.float-r {
    float: right;
}

.flex-item {
    padding: 0 30rpx 50rpx;
}

.videoImg {
    width: 690rpx;
    height: 384rpx;
    position: relative;
    background: #f1f1f1;
    overflow: hidden;
    border-radius: 4rpx;
}

.videoImg image {
    width: 100%;
    display: inline-block;
    border-radius: 4rpx;
}

.videoImg view {
    background: url("data:image/png;base64,") no-repeat;
    background-size: 100%;
    position: absolute;
    width: 78rpx;
    height: 44rpx;
    right: 0;
    top: 0;
    color: #fff;
    padding-left: 30rpx;
    font-size: 26rpx;
}

.videoTitle {
    font-size: 32rpx;
    color: #333;
    line-height: 34rpx;
    margin: 20rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.countCourse {
    font-size: 26rpx;
    color: #999;
    line-height: 28rpx;
    margin-bottom: 20rpx;
}

.studyType {
    height: 30rpx;
}

.studyType > view {
    height: 30rpx;
    line-height: 30rpx;
}

.studyType .i {
    background: url("data:image/png;base64,") no-repeat;
    background-size: 100%;
    width: 30rpx;
    height: 30rpx;
    display: inline-block;
    margin-right: 20rpx;
}

.unlearn .i {
    background-position-y: -40rpx;
}

.studyType .span {
    line-height: 30rpx;
    color: #999;
    display: inline-block;
}

.learn .span {
    color: #47c88a;
}

.learnCount {
    color: #999;
}

.learnCount .span {
    color: #47c88a;
}
