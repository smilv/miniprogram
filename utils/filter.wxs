module.exports = {
	/**
	 * 保留小数点后一位
	 */
    formatDecimal: function(value) {
        return value.toFixed(1)
    },
    /**
     *不足一万时显示数字，达到万时显示：X.Y万,进行四舍五入
     */
    tenThousand: function(value) {
        var result = value >= 10000 ? Math.floor(value / 1000) / 10 + "万" : value;
        return result;
    }
}